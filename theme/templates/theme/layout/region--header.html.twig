                    </svg>
                </button>
                <ul class="language-switcher__dropdown">
                    <li class="mb-2">
                        <a href="#" class="block">NL</a>
                    </li>
                    <li class="mb-2">
                        <a href="#" class="block">EN</a>
                    </li>
                    <li>
                        <a href="#" class="block">FR</a>
                    </li>
                </ul>
            </div>
            #}
            <div{{ attributes }}>
                {% block content %}
                    {{ content }}
                {% endblock %}
            </div>
        </div>
    </div>
</section>
