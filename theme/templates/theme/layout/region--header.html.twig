{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set classes = [
    'region',
    'region--' ~ region|clean_class,
    'bg-tertiary',
    'text-secondary-100',
    'py-2'
] %}
{# {% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="content">
        {{ content }}
      </div>
    </div>
  </div>
{% endif %} #}

<section class="bg-tertiary py-2 hidden sm:block">
    <div class="container-fluid wrap">
        <div class="flex items-center justify-end">
            {#
            <ul class="menu menu--top-nav flex items-center">
                {% for item in top_nav.items %}
                    <li class="menu-item mr-10 {{ item.children ? 'has-dropdown' : '' }}">
                        {% if item.children %}
                            <button type="button" class="js-toggle">
                                {{ item.title }}
                                <svg width="11" height="5" viewbox="0 0 11 5" fill="none"
                                     xmlns="http://www.w3.org/2000/svg" class="ml-2">
                                    <path d="M10.0557 0.00089407C8.50137 0.00089407 7.69837 0.941985 7.05354 1.69749C6.46548 2.38709 6.00112 2.93166 5.05516 2.93166C4.1092 2.93166 3.64585 2.38709 3.05779 1.69749C2.41296 0.941985 1.60996 0.00089407 0.0556641 0.00089407V1.31923C1.00061 1.31923 1.46599 1.86381 2.05404 2.5534C2.69888 3.30992 3.50087 4.25 5.05516 4.25C6.60945 4.25 7.41245 3.30992 8.05729 2.5534C8.64534 1.86381 9.11072 1.31923 10.0557 1.31923V0.00089407Z"
                                          fill="#E30613"/>
                                </svg>
                            </button>
                            <ul class="menu dropdown">
                                {% for child in item.children %}
                                    <li class="menu-item">
                                        <a href="{{ child.url }}">{{ child.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <a href="{{ item.url }}">
                                {{ item.title }}
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
                <li class="menu-item mr-10">
                    <a href="#" class="flex items-center">
                        <svg width="14" height="14" viewbox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg"
                             class="mr-2">
