<nav role="navigation">
    <ul class="menu menu--main flex">
        {% for item in primary_nav.items %}
            <li class="menu-item mr-10 {{ item.children ? 'has-dropdown' : '' }}">
                {% if item.children %}
                    <a target="_{{ item.target }}" href="{{ item.url }}" aria-haspopup="true"
                            {% for child in item.children %}
                                {% if primary_nav.current == child.url %}
                                    class="is-active"
                                {% endif %}
                            {% endfor %}
                    >
                        {{ item.title }}
                        <svg width="11" height="5" viewbox="0 0 11 5" fill="none" xmlns="http://www.w3.org/2000/svg"
                             class="ml-2">
                            <path d="M10.0557 0.00089407C8.50137 0.00089407 7.69837 0.941985 7.05354 1.69749C6.46548 2.38709 6.00112 2.93166 5.05516 2.93166C4.1092 2.93166 3.64585 2.38709 3.05779 1.69749C2.41296 0.941985 1.60996 0.00089407 0.0556641 0.00089407V1.31923C1.00061 1.31923 1.46599 1.86381 2.05404 2.5534C2.69888 3.30992 3.50087 4.25 5.05516 4.25C6.60945 4.25 7.41245 3.30992 8.05729 2.5534C8.64534 1.86381 9.11072 1.31923 10.0557 1.31923V0.00089407Z"
                                  fill="#E30613"/>
                        </svg>
                    </a>
                    <ul class="menu dropdown" aria-label="submenu">
                        {% for child in item.children %}
                            <li class="menu-item {{ primary_nav.current == child.url ? 'is-active' : '' }}">
                                <a target="_{{ child.target }}" href="{{ child.url }}">{{ child.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <a target="_{{ item.target }}" href="{{ item.url }}"
                            {% if primary_nav.current == item.url %}
                                class="is-active"
                            {% endif %}
                    >{{ item.title }}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>
