{% set grid_classes = [
    'grid',
    'grid-cols-1',
    'grid-fill-height',
    paragraph.blocks|length > 2 ? 'md:grid-cols-3': 'md:grid-cols-2',
    'gap-6'
] %}
<div class="paragraph paragraph--clickable-blocks mb-20 sm:mb-40">
	{% if paragraph.title %}
		<div class="col-xs-12">
			<h4 class="h4 text-tertiary text-center mb-10">{{ paragraph.title }}</h4>
		</div>
	{% endif %}
	<div class="col-xs-12">
		<div{{content_attributes.addClass(grid_classes)}}>
			{% for cblock in paragraph.blocks %}
				{% include '@duplicare/components/clickable-block.html.twig' with { 'block': cblock } %}
			{% endfor %}
		</div>
	</div>
</div>
