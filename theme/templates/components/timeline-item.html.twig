<div class="row items-center mb-8 last:mb-0">
    <div class="col-xs-12 flex items-start py-20 {{ timeline_item.value.media ? 'col-md-8' : 'col-sm-12' }}">
        <p class="timeline-date">{{ timeline_item.value.date|date('Y') }}</p>
        <div>
            <h5 class="h5 text-tertiary-700 mb-2">{{ timeline_item.value.title }}</h5>
            {% if timeline_item.value.description %}
            <div class="paragraph text-tertiary-700 richtext">{{ timeline_item.value.description|raw }}</div>
            {% endif %}
        </div>
    </div>

    {% if timeline_item.value.media %}
    <div class="col-xs-12 col-md-4 pl-26 sm:pl-0">
        {% include '@duplicare/components/media.html.twig' with { 'media': timeline_item.value.media } %}
    </div>
    {% endif %}
</div>
